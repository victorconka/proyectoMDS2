<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/mds2_bbdd</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="hibernate.connection.provider_class">org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">15</property>
		<property name="hibernate.c3p0.timeout">0</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/bbdd_gestion/CodigoPostal.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Correo.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Extra.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Foto.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Inmueble.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Mapa.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Municipio.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Provincia.hbm.xml" />
		<mapping resource="ormmapping/bbdd_gestion/Usuario.hbm.xml" />
	</session-factory>
</hibernate-configuration>
